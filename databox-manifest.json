{
    "manifest-version": 1,
    "name": "driver-spendingalarm",
    "docker-registry": "databoxsystems",
    "docker-image-tag": "0.5.2",
    "version": "0.2.0",
    "description": "databox driver to report configurable spending alaram",
    "author": "Chris Greenhalgh, The University of Nottingham",
    "licence": "MIT",
    "databox-type": "app",
    "tags": [
    ],
    "homepage": "https://github.com/cgreenhalgh/driver-spendingalarm",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cgreenhalgh/driver-spendingalarm.git"
    },
    "datasources": [
	{
		"type": "truelayerUserTransactions",
		"required": true,
		"name": "transactions",
		"clientid": "TRANSACTIONS",
		"granularities": []
	}
    ],
    "network-permissions": [],
    "resource-requirements": {},
    "export-whitelist": [],
    "external-whitelist": [
	{
		"urls": ["www.cs.nott.ac.uk","music-mrl.nott.ac.uk"],
		"description": "servers to test against"
	}
    ],
    "resource-requirements": {
        "store": "core-store"
    },
    "provides": [
        {
            "data-source-type": "spendingalarmReport",
            "description": "Report from spending alarm",
            "store-type": "ts/blob",
            "schema": {}
        }
    ]
}
